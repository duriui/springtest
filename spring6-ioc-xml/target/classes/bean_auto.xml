<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userController" class="org.example.auto.controller.UserController" autowire="byType"></bean>
    <bean id="userService" class="org.example.auto.service.UserServiceImpl" autowire="byType"></bean>
    <bean id="userDao" class="org.example.auto.dao.UserDaoImpl"></bean>
</beans>